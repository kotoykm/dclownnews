<h2 class="text-center">¿Olvidaste tu contraseña?</h2>

<div class="row d-flex justify-content-center mt-4">
  <div class="col-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field mb-4">
        <%= f.label :email, "Correo electrónico", class:"fw-bold mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    
      <div class="actions mb-4">
        <%= f.submit "Enviar instrucciones de recuperación", class:"btn mybtn w-100 py-2 fw-bold" %>
      </div>
    <% end %>
    
    <div class="text-end"><%= render "devise/shared/links" %></div>
  </div>
</div>

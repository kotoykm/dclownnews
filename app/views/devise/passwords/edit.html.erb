<h2 class="text-center">Cambio solicitado de contrase単a</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row d-flex justify-content-center mt-4">
    <div class="col-5">
      <%= f.hidden_field :reset_password_token %>
      <div class="field mb-4">
        <%= f.label :password, "Nueva contrase単a", class: "fw-bold mb-2" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
      </div>
      <div class="field mb-4">
        <%= f.label :password_confirmation, "Confirmar nueva contrase単a", class: "fw-bold mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Cambiar mi contrase単a", class:"btn mybtn w-100 py-2 fw-bold mb-4" %>
      </div>
      <% end %>
      
      <div class="text-end"><%= render "devise/shared/links" %></div>
    </div>
  </div>
